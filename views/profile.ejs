<!doctype html>
<html>
<head>
    <title>FooChoi</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="style.css">
</head>
<body id="profilePage">
  <div class="container">

    <div class="page-header text-center">
        <h1><span><i class="fas fa-utensils"></i></span> Your Profile</h1>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>

    <div class="row">

        <!-- LOCAL INFORMATION -->
        <div class="col-sm-6">
            <div class="well">
                <h3><span class="fa fa-user"></span> Credentials</h3>

                <% if (user.local.email) { %>
                    <p>
                        <strong>id</strong>: <%= user._id %><br>
                        <strong>email</strong>: <%= user.local.email %><br>
                        <strong>password</strong>: <%= user.local.password %>
                    </p>

                    <a href="/unlink/local" class="btn btn-default">Unlink</a>
                <% } else { %>
                    <a href="/connect/local" class="btn btn-default">Connect Local</a>
                <% } %>

            </div>
        </div>


        <div class="col-sm-6">
          <h3>User Profile Allergens</h3>
          <ul class="allergies">
          <% for(var i=0; i<allergies.length; i++) {%>
            <li class="allergies">
              <span><%= allergies[i] %></span> |
              <span><i class="fa fa-trash" aria-hidden="true"></i></span>
            </li>
          <% } %>
          </ul>

          <h2>Add a Food</h2>
          <% if (user.local.email) { %>
          <form action="/allergies" method="POST">
            <input type="text" placeholder="allergies" name="allergies">
            <button type="submit">Submit</button>
          </form>
        </div>
        <% } %>

        <h3>What is the cuisine you enjoy most eating?</h3>
        <section>
          <img src="" alt="">
          <img src="" alt="">
          <img src="" alt="">
        </section>


      </div>
    </div>


<script src="main.js"></script>

</body>
</html>

<body id="profilePage">
  <div class="container">

    <div class="page-header text-center">
      <h1><span><i class="fas fa-utensils"></i></span>Homepage</h1>
      <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>

    <div class="row">

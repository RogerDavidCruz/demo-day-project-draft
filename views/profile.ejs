      <div class="col-sm-6">
        <div class="well">
          <h3><span class="fa fa-user"></span> <%= user.local.username %></h3>
        </div>
      </div>

      <div class="col-sm-6">
          <h2>Add an allergy</h2>
          <% if (user.local.email) { %>
            <form action="/foods" method="POST">
              <input type="text" placeholder="Foods for Allergies" name="ingredient"> <!-- name must be correct to avoid null values into the database -->
              <button type="submit">Submit</button>
            </form>
          </div>
          <% } %>
        </div>

    <div class="row">
      <div class="col-sm-6">
        <!-- <h2>User Profile Allergens</h2> -->
        <ul>
          <% for(var i=0; i < foods.length; i++) {%>
            <li class="food">
              <a href="/foods/<%= foods[i] %>">
                <span><%= foods[i] %></span>
                <span><i class="fa fa-trash" aria-hidden="true"></i></span>
              </a>
            </li>
            <% } %>
          </ul>
        </div>
      </div>

